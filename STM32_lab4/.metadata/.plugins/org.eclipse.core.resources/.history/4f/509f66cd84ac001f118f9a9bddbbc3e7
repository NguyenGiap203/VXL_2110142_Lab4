#include "fsm_automatic.h"
#include "global.h"
#include "main.h"
#include "led7_segment.h"

void fsm_automatic(){
	switch(status){
	case INIT:
		clearAllLeds();

		status = RED_GREEN;
		setTimer(1, redTime);
		setTimer(2, greenTime);
		setTimer(3, 1000);
		break;
	case RED_GREEN:
		setRed1();
		setGreen2();

		if(isButtonPressed(0) == 1){
			status = NORMAL;
		}

		if(isTimerExpired(2) == 1){
			status = RED_YELLOW;
			setTimer(2, yellowTime);
		}
		if(isTimerExpired(3) == 1){
			setTimer(3, 1000);
			updateClockBuffer(timeCounter1, timeCounter2);
		}
		break;
	case RED_YELLOW:
		setRed1();
		setYellow2();

		if(isButtonPressed(0) == 1){
			status = NORMAL;
		}

		if(isTimerExpired(2) == 1){
			status = GREEN_RED;
			setTimer(1, greenTime);
			setTimer(2, redTime);
		}
		break;
	case GREEN_RED:
		setGreen1();
		setRed2();

		if(isButtonPressed(0) == 1){
			status = NORMAL;
		}

		if(isTimerExpired(1) == 1){
			status = YELLOW_RED;
			setTimer(1, yellowTime);
		}
		break;
	case YELLOW_RED:
		setYellow1();
		setRed2();

		if(isButtonPressed(0) == 1){
			status = NORMAL;
		}

		if(isTimerExpired(1) == 1){
			status = RED_GREEN;
			setTimer(1, redTime);
			setTimer(2, greenTime);
		}
		break;
	default:
		break;
	}
}
