#include "global.h"
int status = 0;

const int redTimeInit = 5;
const int yellowTimeInit = 2;
const int greenTimeInit = 3;

int redCount = redTimeInit;
int yellowCount = yellowTimeInit;
int greenCount = greenTimeInit;


const int changeToSecond = 1000;
int redTime;
int yellowTime;
int greenTime;

void changCountToSecond(){
	redTime = redCount * changeToSecond;
	yellowTime = yellowCount * changeToSecond;
	greenTime = greenCount * changeToSecond;
}
